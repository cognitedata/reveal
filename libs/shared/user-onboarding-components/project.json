{
  "name": "user-onboarding-components",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/user-onboarding-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "npm": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "outputPath": "dist/libs/shared/user-onboarding-components",
        "commands": ["./scripts/npm.sh"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/user-onboarding-components/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/shared/user-onboarding-components",
        "tsConfig": "libs/shared/user-onboarding-components/tsconfig.lib.json",
        "project": "libs/shared/user-onboarding-components/package.json",
        "entryFile": "libs/shared/user-onboarding-components/src/index.ts",
        "external": ["react/jsx-runtime"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "format": ["esm"],
        "assets": [
          {
            "glob": "libs/shared/user-onboarding-components/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/user-onboarding-components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },

    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/react",
        "port": 4400,
        "configDir": "libs/shared/user-onboarding-components/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "libs/shared/user-onboarding-components/.storybook",
        "outputDir": "dist/storybook/user-onboarding-components"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "user-onboarding-components:build-storybook",
        "staticFilePath": "dist/storybook/user-onboarding-components"
      },
      "configurations": {
        "ci": {
          "buildTarget": "user-onboarding-components:build-storybook:ci"
        }
      }
    }
  }
}

{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@cognite/sdk-", "@cognite/reveal-"],
      "enabled": false
    },
    {
      "matchLanguages": ["rust"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "stabilityDays": 4
    },
    {
      "matchUpdateTypes": ["major"],
      "stabilityDays": 10
    }
  ],
  "schedule": "between 7am and 18pm weekdays"
}

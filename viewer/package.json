{
  "name": "@cognite/reveal",
  "version": "1.0.0",
  "private": true,
  "description": "WebGL based 3D viewer for CAD and point clouds processed in Cognite Data Fusion.",
  "repository": {
    "type": "git",
    "directory": "viewer",
    "url": "https://github.com/cognitedata/reveal.git"
  },
  "homepage": "https://github.com/cognitedata/reveal/tree/master/viewer",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rimraf -rf dist/ && yarn run mkdist && webpack --env.development",
    "build:prod": "yarn run mkdist && webpack && node script/copyPackage.js",
    "build:watch": "yarn run build -- --watch",
    "serve": "cd ../parser-worker && yarn && yarn build && cd ../examples && yarn && yarn start",
    "mkdist": "npx run-script-os",
    "mkdist:win32": "@powershell $(if(-not(Test-Path dist -PathType Container)) { mkdir dist;$? } else { $true;$? }) -and $(Copy-Item -Path package.json, README.md, LICENSE -Destination dist;$?)",
    "mkdist:default": "mkdir -p dist && cp package.json README.md LICENSE dist",
    "clean": "rimraf -rf dist/ ../target ../parser-worker/pkg/",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js --max-warnings 0 && yarn run tsc",
    "lint:fix": "eslint . --ext .ts,.js --max-warnings 0 --fix",
    "tsc": "tsc --noEmit --incremental false --skipLibCheck true",
    "prebump": "yarn version --no-git-tag-version && yarn",
    "bump": " yarn bump:commit && yarn bump:tag && yarn bump:push",
    "bump:commit": "cross-var git commit -am \"chore(viewer): bump version $npm_package_version\"",
    "bump:tag": "cross-var git tag $npm_package_name@$npm_package_version",
    "bump:push": "git push -u origin head && git push --tags",
    "release": "yarn build:prod && cd dist && npm publish --non-interactive"
  },
  "author": "Lars Moastuen <lars.moastuen@cognite.com>",
  "contributors": [
    "Joachim Bj√∏rne <joachim.bjorne@cognite.com>",
    "Christopher Tannum <christopher.tannum@cognite.com>",
    "Maksim Nesterenko <maksim.nesterenko@cognite.com>"
  ],
  "license": "Apache-2.0",
  "sideEffects": false,
  "glslify": {
    "transform": [
      "glslify-import"
    ]
  },
  "devDependencies": {
    "@cognite/sdk": "^3.0.0",
    "@cognite/sdk-core": "^1.0.0",
    "@types/gl-matrix": "^3.2.0",
    "@types/jest": "^26.0.9",
    "@types/mixpanel-browser": "^2.35.3",
    "@types/node": "^14.0.14",
    "@types/tween.js": "^18.5.1",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "core-js": "^3.6.5",
    "cross-var": "^1.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-jsdoc": "^30.5.1",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.0.0",
    "gl": "^4.5.2",
    "glslify-loader": "^2.0.0",
    "html-webpack-plugin": "4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.3.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.2.11",
    "nock": "^13.0.4",
    "prettier": "^2.0.5",
    "raw-loader": "^4.0.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.1",
    "three": "^0.117.1",
    "ts-jest": "^26.2.0",
    "ts-loader": "8.0.2",
    "typescript": "3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-log": "^3.0.1",
    "webpack-node-externals": "^2.5.1",
    "whatwg-fetch": "^3.4.0"
  },
  "dependencies": {
    "@cognite/potree-core": "^1.1.3",
    "@cognite/reveal-parser-worker": "1.0.0-beta-1",
    "@cognite/three-combo-controls": "^1.4.2",
    "@tweenjs/tween.js": "^18.5.0",
    "@types/lodash": "^4.14.159",
    "comlink": "^4.3.0",
    "gl-matrix": "^3.3.0",
    "glslify": "^7.0.0",
    "glslify-import": "^3.1.0",
    "lodash": "^4.17.15",
    "mixpanel-browser": "^2.38.0",
    "rxjs": "^6.5.5"
  },
  "peerDependencies": {
    "@cognite/sdk": "^3.0.0",
    "three": "^0.117.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -q && yarn run tsc"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --max-warnings 0 --fix"
  }
}

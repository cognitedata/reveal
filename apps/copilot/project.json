{
  "name": "copilot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/copilot/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/copilot",
        "index": "apps/copilot/src/index.html",
        "baseHref": "/",
        "main": "apps/copilot/src/main.tsx",
        "tsConfig": "apps/copilot/tsconfig.app.json",
        "assets": ["apps/copilot/src/favicon.ico", "apps/copilot/src/assets"],
        "styles": [],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "apps/copilot/webpack-config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": false
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/copilot/src/environments/environment.ts",
              "with": "apps/copilot/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        },
        "staging": {
          "fileReplacements": [
            {
              "replace": "apps/copilot/src/environments/environment.ts",
              "with": "apps/copilot/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        },
        "preview": {
          "fileReplacements": [
            {
              "replace": "apps/copilot/src/environments/environment.ts",
              "with": "apps/copilot/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        },
        "mock": {
          "fileReplacements": [
            {
              "replace": "apps/copilot/src/environments/environment.ts",
              "with": "apps/copilot/src/environments/mock/environment.mock.ts"
            },
            {
              "replace": "apps/copilot/src/AppWrapper.tsx",
              "with": "apps/copilot/src/environments/mock/AppWrapper.tsx"
            },
            {
              "replace": "apps/copilot/src/cogniteSdk.ts",
              "with": "apps/copilot/src/environments/mock/cogniteSdk.ts"
            }
          ],
          "optimization": false,
          "outputHashing": "all",
          "sourceMap": true,
          "extractCss": false,
          "namedChunks": false,
          "extractLicenses": false,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "copilot:build",
        "hmr": true,
        "port": 3012,
        "ssl": true,
        "allowedHosts": ".dev.fusion.cogniteapp.com"
      },
      "configurations": {
        "development": {
          "buildTarget": "copilot:build:development"
        },
        "production": {
          "buildTarget": "copilot:build:production",
          "hmr": false
        },
        "mock": {
          "buildTarget": "copilot:build:mock",
          "hmr": true,
          "port": 3012,
          "ssl": true,
          "proxyConfig": "apps/copilot/proxy.conf.json"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/copilot/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/copilot/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": [],
  "pipeline": {
    "releaseStrategy": "single-branch",
    "previewPackageName": "@cognite/cdf-copilot"
  }
}

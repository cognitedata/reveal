{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "lib",
    "baseUrl": "src",
    "strict": true,
    "types": [
      "node",
      "@types/jest"
    ],
    "paths": {
      "src/*": [
        "*"
      ],
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
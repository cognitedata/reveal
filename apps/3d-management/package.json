{
  "name": "@cognite/cdf-3d-management",
  "version": "4.3.5",
  "private": true,
  "scripts": {
    "start": "cross-env BROWSER=none WDS_SOCKET_PORT=3033 WDS_SOCKET_HOST=localhost PORT=3033 HTTPS=true SKIP_PREFLIGHT_CHECK=true react-app-rewired start",
    "build": "react-app-rewired --max_old_space_size=4096 build",
    "generate-preview-artifacts": "cdf-ui-cli -pr -p @cognite/cdf-3d-management --outputFilename index.js --destinationPath ./build",
    "build:preview": "yarn build && yarn generate-preview-artifacts",
    "test": "react-app-rewired test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache --testPathPattern=src",
    "lint": "yarn prettier && yarn eslint",
    "lint:fix": "yarn prettier -w && yarn eslint --fix",
    "eslint": "yarn eslint:changed \"src/**/*.{ts,tsx}\"",
    "eslint:changed": "eslint --config .eslintrc.production.js",
    "prettier": "prettier --config .prettierrc -l \"src/**/*.{js,ts,tsx}\"",
    "analyze": "source-map-explorer 'build/static/js/*.js' --gzip",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {},
  "devDependencies": {},
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/pages/RevisionDetails/components/ToolbarTreeView/",
      "<rootDir>/src/store/modules/TreeView",
      "<rootDir>/src/components/PageHeader",
      "<rootDir>/src/pages/RevisionDetails/components/TreeView"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn lint"
    }
  }
}

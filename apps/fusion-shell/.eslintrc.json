{
  "extends": [
    "plugin:cypress/recommended",
    "plugin:@nx/react",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*", "public/dependencies/**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.cy.{ts,js,tsx,jsx}", "cypress/**/*.{ts,js,tsx,jsx}"],
      "rules": {
        "testing-library/await-async-query": ["off"],
        "testing-library/prefer-screen-queries": ["off"]
      }
    }
  ]
}

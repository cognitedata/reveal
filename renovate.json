{
  "extends": [
    "config:base"
  ],
  "timezone": "Europe/Oslo",
  "packageRules": [
    {
      "matchPackagePrefixes": [
        ""
      ],
      // Prepare Renovate PRs before office hours
      "schedule": [
        "after 6am and before 9am every weekday"
      ]
    },
    {
      "matchPackagePrefixes": [
        "@cognite/sdk-",
        "@cognite/reveal-"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPackagePrefixes": [
        ""
      ],
      "addLabels": [
        "dependencies",
        "auto-update",
        "slack"
      ],
      "prConcurrentLimit": 5
    },
    {
      "matchPaths": ["viewer"],
      "extends": ["github>Turbo87/renovate-config//rust/updateToolchain"]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      // Hold back creating PRs until version is 4 days old
      // https://docs.renovatebot.com/configuration-options/#suppress-branchpr-creation-for-x-days
      "stabilityDays": 4,
      "internalChecksFilter": "strict"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "stabilityDays": 10,
      // Hold back creating PRs until version is 10 days old
      // https://docs.renovatebot.com/configuration-options/#suppress-branchpr-creation-for-x-days
      "internalChecksFilter": "strict"
    }
  ],
  "force": {
    "constraints": {
      "node": "< 17.0.0",
      "yarn": ">= 3.0.0"
    }
  }
}

{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "noEmit": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      // it's aligned with docusaurus @site alias
      // https://v2.docusaurus.io/docs/versioning/#use-absolute-import-within-the-docs
      "@site/*": ["*"]
    }
  },
  "include": ["src", "docs", "versioned_docs"]
}

{
  "exclude": ["node_modules", "dist", "build"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "strict": true,
    "target": "es5",
    "types": ["node", "jest"]
  }
}

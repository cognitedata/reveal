{
  "name": "@cognite/explorer",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "./scripts/start.sh",
    "build:old": "./scripts/build.sh",
    "build": "bazel build :build_sed",
    "test:old": "./scripts/test.sh",
    "test": "bazel run :jest -- ",
    "lint:old": "../../node_modules/.bin/concurrently \"yarn prettier\" \"yarn eslint\"",
    "lint": "bazel test :eslint_test :prettier_test",
    "eslint:old": "yarn eslint:changed 'src/**/*.{ts,tsx}' 'public/index.html'",
    "eslint:changed": "../../node_modules/.bin/eslint --config .eslintrc.production.js",
    "eslint:fix": "yarn eslint --fix",
    "eslint": "bazel test :eslint_test",
    "eslint:bazel-fix": "bazel run :eslint_test -- --fix",
    "prettier:old": "../../node_modules/.bin/prettier --config ../../.prettierrc.js -l 'src/**/*.{js,ts,tsx}' || (echo \nThese files are not formatted correctly && false)",
    "prettier:fix": "../../node_modules/.bin/prettier --config ../../.prettierrc.js --write -l 'src/**/*.{js,ts,tsx}'",
    "prettier": "bazel test :prettier_test",
    "prettier:bazel-fix": "bazel run :prettier_test -- --write",
    "storybook:old": "../../node_modules/.bin/start-storybook -p 6006",
    "storybook": "ibazel run :start-storybook",
    "build-storybook:old": "../../node_modules/.bin/build-storybook",
    "build-storybook": "bazel build :storybook-static",
    "e2e:start-idp": "./scripts/start-fake-idp.sh",
    "cypress:bazel-run-live": "ibazel run :cypress",
    "cypress:open": "../../node_modules/.bin/cypress open --env REACT_APP_E2E_USER=$(git config user.email)",
    "cypress:ci": "bazel test :cypress_test",
    "update-helpers": "bazel run :generate_package_json_helpers",
    "deploy": "cd ../.. && ./scripts/deploy.sh explorer",
    "graphql:deploy": "node resources/schema/deploy"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "__tests__",
      ".stories."
    ],
    "moduleNameMapper": {
      "^@cognite/(.*)/dist/mocks$": [
        "<rootDir>/../../packages/$1/src/mocks",
        "<rootDir>/../../packages/$1/dist/mocks"
      ],
      "^@cognite/(?!cogs.js|sdk|testing|reveal)(.*)$": [
        "../../../packages/$1/src",
        "../../../packages/$1/dist",
        "<rootDir>/../../packages/$1/src",
        "<rootDir>/../../packages/$1/dist"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

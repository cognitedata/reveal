{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": [
        "node_modules/@types",
        "src/@types"
    ],
    "lib": [
        "dom",
        "esnext"
    ],

    // Workaround for TS2345
    "baseUrl": ".",
    "paths": {
      "@cognite/sdk": ["node_modules/@cognite/sdk"]
    },
  },
  
}

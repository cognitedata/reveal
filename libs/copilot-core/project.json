{
  "name": "copilot-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/copilot-core/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/copilot-core/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "format": ["esm"],
        "outputPath": "dist/libs/@fusion/copilot-core",
        "tsConfig": "libs/copilot-core/tsconfig.lib.json",
        "entryFile": "libs/copilot-core/src/index.ts",
        "compiler": "babel",
        "project": "libs/copilot-core/package.json",
        "rollupConfig": "libs/copilot-core/rollup.config.js",
        "assets": [
          {
            "glob": "libs/copilot-core/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "updateBuildableProjectDepsInPackageJson": false,
        "babelUpwardRootMode": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/copilot-core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/copilot-core/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/copilot-core",
        "configDir": "libs/copilot-core/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "copilot-core:build-storybook",
        "staticFilePath": "dist/storybook/copilot-core"
      },
      "configurations": {
        "ci": {
          "buildTarget": "copilot-core:build-storybook:ci"
        }
      }
    }
  }
}

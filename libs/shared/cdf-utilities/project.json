{
  "name": "cdf-utilities",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/cdf-utilities/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "npm": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": ["./scripts/npm.sh"]
      },
      "outputs": ["{workspaceRoot}/dist/libs/shared/cdf-utilities"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/shared/cdf-utilities/**/*.{ts,tsx,js,jsx}",
          "libs/shared/cdf-utilities/package.json"
        ]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "format": ["esm", "cjs"],
        "outputPath": "dist/libs/shared/cdf-utilities",
        "tsConfig": "libs/shared/cdf-utilities/tsconfig.lib.json",
        "project": "libs/shared/cdf-utilities/package.json",
        "entryFile": "libs/shared/cdf-utilities/src/index.ts",
        "external": "all",
        "rollupConfig": "libs/shared/cdf-utilities/rollup-config.js",
        "compiler": "tsc",
        "updateBuildableProjectDepsInPackageJson": false,
        "skipTypeField": true,
        "assets": [
          {
            "glob": "libs/shared/cdf-utilities/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "babelUpwardRootMode": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/shared/cdf-utilities/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}

{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "downlevelIteration": true,
    "sourceMap": true,
    "typeRoots": [
      "../node_modules/@types",
      "src/@types"
    ],
    // do not add path aliases. They'll end up in generated declaration files.
  },
  // include is also used for eslint to understand which files should be linted
  "include": [
    "*.js",
    "*.ts",
    "src/**/*",
    ".eslintrc.js",
    "script"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
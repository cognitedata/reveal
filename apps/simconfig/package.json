{
  "name": "@cognite/simconfig-app",
  "version": "1.3.1",
  "private": true,
  "scripts": {
    "start": "./scripts/start.sh",
    "start:local": "REACT_APP_LOCAL_SERVICE=true ./scripts/start.sh",
    "build": "bazel build :build_sed",
    "build:manual": "./script/build.sh",
    "test": "bazel run :jest -- ",
    "test:debug": "yarn test --runInBand",
    "test:manual": "./scripts/test.sh",
    "lint": "../../node_modules/.bin/concurrently \"yarn prettier\" \"yarn eslint\"",
    "lint:bazel": "bazel test :eslint_test :prettier_test",
    "eslint": "yarn eslint:changed 'src/**/*.{ts,tsx}' 'public/index.html'",
    "eslint:changed": "../../node_modules/.bin/eslint --config .eslintrc.production.js",
    "eslint:fix": "yarn eslint --fix",
    "eslint:bazel": "bazel test :eslint_test",
    "eslint:bazel-fix": "bazel run :eslint_test -- --fix",
    "prettier": "../../node_modules/.bin/prettier --config ./.prettierrc.js -l src/**/*.{ts,tsx}",
    "prettier:fix": "../../node_modules/.bin/prettier --config ./.prettierrc.js --write -l 'src/**/*.{js,ts,tsx}'",
    "prettier:bazel": "bazel test :prettier_test",
    "prettier:bazel-fix": "bazel run :prettier_test -- --write",
    "storybook": "../../node_modules/.bin/start-storybook -p 6006",
    "storybook:bazel": "bazel run :start-storybook",
    "build-storybook": "../../node_modules/.bin/build-storybook",
    "build-storybook:bazel": "bazel build :storybook-static-final",
    "update-helpers": "bazel run :generate_package_json_helpers",
    "deploy": "cd ../.. && ./scripts/deploy.sh simconfig",
    "cypress:run-live": "./scripts/cypress-run-live.sh",
    "cypress:bazel-run-live": "ibazel run :cypress",
    "cypress:open": "../../node_modules/.bin/cypress open"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "__tests__",
      ".stories."
    ],
    "moduleNameMapper": {
      "^@cognite/(.*)/dist/mocks$": [
        "<rootDir>/../../packages/$1/src/mocks",
        "<rootDir>/../../packages/$1/dist/mocks"
      ],
      "^@cognite/(?!cogs.js|sdk|testing)(.*)$": [
        "../../../packages/$1/src",
        "../../../packages/$1/dist",
        "<rootDir>/../../packages/$1/src",
        "<rootDir>/../../packages/$1/dist"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

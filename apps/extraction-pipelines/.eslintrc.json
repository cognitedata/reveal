{
  "extends": [
    "plugin:cypress/recommended",
    "plugin:@nx/react",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "lodash/prefer-noop": "warn",
        "@cognite/require-t-function": "warn"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-console": "warn"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "testing-library/no-container": ["warn"],
        "testing-library/no-node-access": ["warn"],
        "testing-library/no-render-in-setup": ["warn"]
      }
    },
    {
      "files": ["*.cy.{ts,js,tsx,jsx}", "cypress/**/*.{ts,js,tsx,jsx}"],
      "rules": {}
    }
  ]
}

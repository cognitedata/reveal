{
  "name": "simint",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/simint/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/simint",
        "index": "apps/simint/src/index.html",
        "baseHref": "/",
        "main": "apps/simint/src/index.tsx",
        "tsConfig": "apps/simint/tsconfig.app.json",
        "assets": ["apps/simint/src/assets"],
        "styles": [],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "apps/simint/webpack-config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": false
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/simint/src/environments/environment.ts",
              "with": "apps/simint/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        },
        "mock": {
          "fileReplacements": [
            {
              "replace": "apps/simint/src/environments/environment.ts",
              "with": "apps/simint/src/environments/mock/environment.mock.ts"
            },
            {
              "replace": "apps/simint/src/AppWrapper.tsx",
              "with": "apps/simint/src/environments/mock/AppWrapper.tsx"
            },
            {
              "replace": "apps/simint/src/cogniteSdk.ts",
              "with": "apps/simint/src/environments/mock/cogniteSdk.ts"
            }
          ],
          "optimization": false,
          "outputHashing": "all",
          "sourceMap": true,
          "extractCss": false,
          "namedChunks": false,
          "extractLicenses": false,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "simint:build",
        "hmr": true,
        "allowedHosts": "all",
        "headers": {
          "Access-Control-Allow-Origin": "*"
        },
        "ssl": true,
        "port": 3010
      },
      "configurations": {
        "development": {
          "buildTarget": "simint:build:development"
        },
        "production": {
          "buildTarget": "simint:build:production",
          "hmr": false
        },
        "mock": {
          "buildTarget": "simint:build:mock",
          "hmr": true,
          "port": 3001,
          "ssl": true,
          "proxyConfig": "apps/simint/proxy.conf.json"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/simint/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/simint/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": [],
  "pipeline": {
    "releaseStrategy": "multi-branch",
    "previewPackageName": "@cognite/cdf-simint-ui"
  }
}

{
  "name": "@cognite/tenant-selector-app",
  "version": "0.7.0",
  "private": true,
  "scripts": {
    "start": "./scripts/start.sh",
    "start:bazel": "ibazel run :start",
    "build": "./scripts/build.sh",
    "build:bazel": "bazel build :build_sed",
    "test": "./scripts/test.sh",
    "test:bazel": "ibazel test :test",
    "lint": "bazel test :eslint_test :prettier_test",
    "eslint": "bazel test :eslint_test",
    "eslint:fix": "bazel run :eslint_test -- --fix",
    "prettier": "bazel test :prettier_test",
    "prettier:fix": "bazel run :prettier_test -- --write",
    "storybook": "../../node_modules/.bin/start-storybook -p 6006",
    "storybook:bazel": "ibazel run :start-storybook",
    "build-storybook": "../../node_modules/.bin/build-storybook",
    "build-storybook:bazel": "bazel build :storybook-static",
    "update-helpers": "bazel run :generate_package_json_helpers"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "__tests__",
      ".stories."
    ],
    "moduleNameMapper": {
      "^@cognite/(.*)/mocks$": [
        "<rootDir>/../../packages/$1/src/mocks",
        "<rootDir>/../../packages/$1/dist/mocks"
      ],
      "^@cognite/(?!cogs.js|sdk|testing)(.*)$": [
        "../../../packages/$1/src",
        "../../../packages/$1/dist",
        "<rootDir>/../../packages/$1/src",
        "<rootDir>/../../packages/$1/dist"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

load("@build_bazel_rules_nodejs//:index.bzl", "js_library", "pkg_npm")
load("@bazel_skylib//rules:write_file.bzl", "write_file")
load("@npm//@bazel/typescript:index.bzl", "ts_config", "ts_project")
load("//rules/lint:index.bzl", "eslint_config", "eslint_test", "prettier_test")
load("//rules/package_json_helpers:generate.bzl", "generate_package_json_helpers")
load("//rules/package_json_helpers:module_mappings.bzl", "module_mappings")
load("//rules/npm:is_published.bzl", "is_published")
load("//rules/npm:package_info.bzl", "package_info")
load("//rules/npm:append_deps.bzl", "append_deps")

SOURCES = glob(
    ["src/**/*.ts"],
    exclude = ["src/**/*.spec.ts"],
)

TESTS = glob(["src/**/*.spec.ts"])

# Generates the below helpers.
#
# Usage:
#   bazel run :generate_package_json_helpers
generate_package_json_helpers(
    name = "generate_package_json_helpers",
    local_package_json = ":package.json",
    out_dir = "dist",
    package_json = "//:package.json",
    src_dir = "src",
    tags = ["manual"],
    workspace = "@npm",
)

### start of auto-generated helpers ###

# Dependencies from package.json
DEPENDENCIES = []

# Type dependencies from package.json
TYPE_DEPENDENCIES = ["@npm//@types/sinon"]

# Dev dependencies from package.json
DEV_DEPENDENCIES = [
    "@npm//@storybook/addons",
    "@npm//sinon",
]

# Mappings for absolute imports from baseUrl @unused
mappings_dict = {
    "index": "dist/index",
    "sandbox": "dist/sandbox",
}

### end of auto-generated helpers ###

eslint_config(
    name = "eslint_config",
    src = ":.eslintrc.js",
    deps = [
        "//:eslint_config",
        "//packages:eslint_config",
    ],
)

eslint_test(
    name = "eslint_test",
    data = SOURCES + TESTS + [
        ":tsconfig.json",
        "//packages:tsconfig.json",
        "//:tsconfig.json",
    ],
    eslint_config = ":eslint_config",
)

prettier_test(
    name = "prettier_test",
    data = SOURCES + TESTS,
    prettier_config = "//:prettier_config",
)

write_file(
    name = "write_chdir_script",
    out = "chdir.js",
    content = ["process.chdir(__dirname)"],
)

append_deps(
    name = "package-json",
    dependencies = DEPENDENCIES,
    dev_dependencies = DEV_DEPENDENCIES + TYPE_DEPENDENCIES,
    package = "package.json",
)

ts_config(
    name = "ts_config_build",
    src = ":tsconfig.build.json",
    deps = [
        ":tsconfig.json",
        "//:tsconfig.json",
        "//packages:tsconfig.json",
    ],
)

ts_project(
    name = "compile_ts",
    srcs = SOURCES,
    declaration = True,
    out_dir = "dist",
    resolve_json_module = True,
    root_dir = "src",
    tsconfig = ":ts_config_build",
    deps = DEPENDENCIES + DEV_DEPENDENCIES + TYPE_DEPENDENCIES + [
        "@npm//@types/jest",
        "@npm//@types/node",
    ],
)

_mappings = module_mappings(
    name = "mappings",
    mappings = mappings_dict,
)

js_library(
    name = "testing",
    package_name = "@cognite/testing",
    srcs = ["package-json"],
    visibility = ["//visibility:public"],
    deps = DEPENDENCIES + [":compile_ts"],
)

pkg_npm(
    name = "npm-package",
    package_name = "@cognite/testing",
    visibility = ["//visibility:public"],
    deps = [
        ":compile_ts",
        "package-json",
    ] + _mappings,
)

is_published(
    name = "is_published",
    package = ":npm-package",
)

package_info(
    name = "package_info",
    display_name = "testing",
    package = ":npm-package",
)

{
  "name": "@cognite/cdf-integrations-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "BROWSER=none WDS_SOCKET_PORT=3015 WDS_SOCKET_HOST=localhost SKIP_PREFLIGHT_CHECK=true PORT=3015 rescripts start",
    "build": "rescripts --max_old_space_size=4096 build",
    "generate-preview-artifacts": "cdf-ui-cli -pr -b cdf-hub-dev -p @cognite/cdf-integrations-ui -o index.js -d ./build",
    "build:preview": "yarn build && yarn generate-preview-artifacts",
    "test": "rescripts test",
    "lint": "concurrently \"yarn prettier\" \"yarn eslint\"",
    "eslint": "yarn eslint:changed 'src/**/*.{ts,tsx}'",
    "eslint:changed": "eslint --config .eslintrc.production.js",
    "prettier": "prettier --config .prettierrc -l 'src/**/*.{js,ts,tsx}' || (echo \nThese files are not formatted correctly && false)",
    "storybook": "start-storybook -p 6006"
  },
  "dependencies": {
    "@cognite/cdf-utilities": "^0.7.1",
    "@cognite/cogs.js": "^1.18.0",
    "@cognite/metrics": "^0.0.32",
    "@google-cloud/storage": "^5.3.0",
    "@rescripts/cli": "^0.0.14",
    "@rescripts/utilities": "^0.0.7",
    "@sentry/browser": "^5.27.1",
    "antd": "3.26",
    "commander": "^5.1.0",
    "fs-extra": "^9.0.1",
    "i18next": "^19.8.2",
    "i18next-chained-backend": "^2.0.1",
    "i18next-http-backend": "^1.0.21",
    "i18next-localstorage-backend": "^3.1.2",
    "i18next-locize-backend": "^4.1.8",
    "i18next-pseudo": "^2.2.0",
    "query-string": "^6.13.6",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-i18next": "^11.7.3",
    "react-scripts": "3.4.3",
    "single-spa-react": "^3.1.0",
    "styled-components": "^5.2.0",
    "systemjs-webpack-interop": "^2.1.2"
  },
  "devDependencies": {
    "@cognite/babel-plugin-styled-components": "^1.10.7",
    "@cognite/cdf-ui-cli": "^0.1.0",
    "@cognite/eslint-config": "^1.6.1",
    "@cognite/eslint-plugin": "^1.3.8",
    "@quickbaseoss/babel-plugin-styled-components-css-namespace": "^1.0.1",
    "@rescripts/rescript-use-babel-config": "^0.0.10",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.27",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^10.4.9",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/single-spa-react": "^2.12.0",
    "@types/sinon": "^9.0.8",
    "@types/styled-components": "^5.1.4",
    "concurrently": "^5.3.0",
    "cross-var": "^1.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-testcafe": "^0.2.1",
    "eslint-plugin-testing-library": "^3.9.2",
    "husky": "^4.3.0",
    "postcss-prefixwrap": "^1.19.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "sinon": "^9.2.0",
    "style-loader": "^1.3.0",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}

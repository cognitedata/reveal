{
  "name": "coding-conventions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/coding-conventions/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/coding-conventions",
        "index": "apps/coding-conventions/src/index.html",
        "baseHref": "/",
        "main": "apps/coding-conventions/src/main.tsx",
        "polyfills": "apps/coding-conventions/src/polyfills.ts",
        "tsConfig": "apps/coding-conventions/tsconfig.app.json",
        "assets": ["apps/coding-conventions/src/favicon.ico"],
        "styles": [],
        "scripts": [],
        "webpackConfig": "apps/coding-conventions/webpack-config.js",
        "isolatedConfig": true
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": false
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/coding-conventions/src/environments/environment.ts",
              "with": "apps/coding-conventions/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "coding-conventions:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "coding-conventions:build:development",
          "allowedHosts": "*.dev.fusion.cogniteapp.com,apps-staging.cognite.com"
        },
        "production": {
          "buildTarget": "coding-conventions:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/coding-conventions/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/coding-conventions/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [],
  "pipeline": {
    "previewPackageName": "@cognite/cdf-coding-conventions"
  }
}

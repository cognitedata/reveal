{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "esnext",
    "types": ["vite/client", "jest", "@testing-library/jest-dom"],
    "incremental": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "cypress/fixtures/**/*.json",
    ".storybook-dev/**/*",
    "public/sidecar.js",
    ".eslintrc.js",
    ".eslintrc.production.js"
  ],
  "exclude": ["node_modules", "build", "dist"]
}

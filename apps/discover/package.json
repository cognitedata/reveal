{
  "name": "discover",
  "description": "Discover - AKA: PrettyPoly",
  "version": "1.18.0",
  "private": true,
  "scripts": {
    "analyse": "../../node_modules/.bin/source-map-explorer 'build/static/js/*.js' --only-mapped --html /tmp/result.html && google-chrome /tmp/result.html",
    "analyze": "yarn analyse",
    "build:bazel": "bazel build :build_sed",
    "clean": "rm -Rf build",
    "testcafe:bazel": "bazel test :testcafe_test",
    "testcafe": "ibazel run :testcafe",
    "testcafe:linux": "ibazel run :testcafe_linux",
    "eslint:bazel": "bazel test :eslint_test",
    "eslint:bazel-fix": "bazel run :eslint_test -- --fix",
    "lint:fix": "scripts/lint-fix.sh",
    "lint": "scripts/lint.sh",
    "lint:fast": "pretty-quick --staged",
    "lint:bazel": "bazel test :eslint_test :prettier_test",
    "prettier:bazel": "bazel test :prettier_test",
    "prettier:bazel-fix": "bazel run :prettier_test -- --write",
    "start:a": "REACT_APP_PROJECT=discover-e2e-azure-dev REACT_APP_CLUSTER=azure-dev ./scripts/start.sh",
    "start:b": "REACT_APP_PROJECT=discover-e2e-bluefield REACT_APP_CLUSTER=bluefield ./scripts/start.sh",
    "start:c": "REACT_APP_PROJECT=discover-dev-bluefield REACT_APP_CLUSTER=bluefield ./scripts/start.sh",
    "start:idp:a": "REACT_APP_PROJECT=discover-e2e-azure-dev REACT_APP_CLUSTER=azure-dev ./scripts/startIdP.sh",
    "start:idp:b": "REACT_APP_PROJECT=discover-e2e-bluefield REACT_APP_CLUSTER=bluefield ./scripts/startIdP.sh",
    "start:idp:c": "REACT_APP_PROJECT=discover-dev-bluefield REACT_APP_CLUSTER=bluefield ./scripts/startIdP.sh",
    "storybook": "../../node_modules/.bin/start-storybook -p 6006",
    "storybook:bazel": "ibazel run :start-storybook",
    "build-storybook:bazel": "bazel build :storybook-static",
    "test:debug": "../../node_modules/.bin/react-scripts --inspect-brk test --runInBand",
    "t": "yarn test:all",
    "test": "ibazel test :unit_test",
    "test:raw": "./scripts/test.sh src",
    "test:all": "../../node_modules/.bin/react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:changed": "yarn test:all --detectOpenHandles --bail --colors --verbose --onlyChanged --coverageReporters=none --watchAll=false",
    "update-helpers": "bazel run :generate_package_json_helpers",
    "cypress": "ibazel run :cypress_run -- --env REACT_APP_E2E_USER=$(git config user.email)",
    "cypress:ci": "bazel test :cypress_test",
    "cypress:open": "../../node_modules/.bin/cypress open --env REACT_APP_E2E_USER=$(git config user.email)"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "node_modules",
      "__tests__",
      ".stories."
    ],
    "moduleNameMapper": {
      "^@cognite/(.*)/dist/mocks$": [
        "<rootDir>/../../packages/$1/src/mocks",
        "<rootDir>/../../packages/$1/dist/mocks"
      ],
      "^@cognite/(?!cogs.js|sdk|user-management-service-types|seismic-sdk-js|gcs-browser-upload|geospatial-sdk-js|node-visualizer|sdk-wells|subsurface-interfaces|videx-wellog)(.*)$": [
        "../../../packages/$1/src",
        "../../../packages/$1/dist",
        "<rootDir>/../../packages/$1/src",
        "<rootDir>/../../packages/$1/dist"
      ]
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

{
  "name": "fusion-shell",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/fusion-shell/src",
  "projectType": "application",
  "targets": {
    "build-single-spa-deps": {
      "executor": "nx:noop",
      "dependsOn": [
        {
          "projects": ["cdf-sdk-singleton", "cdf-route-tracker"],
          "target": "build-single-spa"
        }
      ]
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/fusion-shell"
      },
      "configurations": {
        "staging": {
          "mode": "development"
        },
        "preview": {
          "mode": "production"
        },
        "production": {
          "mode": "production"
        }
      },
      "dependsOn": ["build-single-spa-deps"]
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "staging",
      "options": {
        "buildTarget": "fusion-shell:build"
      },
      "configurations": {
        "staging": {
          "buildTarget": "fusion-shell:build:staging",
          "hmr": true
        },
        "preview": {
          "buildTarget": "fusion-shell:build:preview",
          "hmr": true
        },
        "production": {
          "buildTarget": "fusion-shell:build:production",
          "hmr": false
        }
      },
      "dependsOn": ["build-single-spa-deps"]
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "fusion-shell:build",
        "port": 4200,
        "host": "127.0.0.1"
      },
      "configurations": {
        "development": {
          "buildTarget": "fusion-shell:build:development"
        },
        "production": {
          "buildTarget": "fusion-shell:build:production"
        }
      },
      "dependsOn": ["build-single-spa-deps"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/fusion-shell/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/fusion-shell/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "e2e": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "apps/fusion-shell/cypress.config.ts",
        "testingType": "e2e",
        "devServerTarget": "fusion-shell:preview:production",
        "env": {
          "ORG": "cog-dss",
          "PROJECT": "dss-dev",
          "TENANT": "dssbycognite.onmicrosoft.com",
          "CLUSTER": "greenfield.cognitedata.com"
        }
      },
      "configurations": {
        "production": {
          "devServerTarget": "fusion-shell:preview:production"
        },
        "ci": {
          "devServerTarget": "fusion-shell:preview:production"
        }
      },
      "dependsOn": ["build-single-spa-deps"]
    }
  },
  "tags": [],
  "pipeline": {
    "releaseStrategy": "single-branch",
    "firebaseSite": "cdf-ui-host",
    "previewPackageName": "@cognite/fusion-shell"
  }
}

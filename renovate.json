{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "@cognite/sdk-",
        "@cognite/reveal-"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPackagePrefixes": [
        ""
      ],
      "addLabels": [
        "dependencies",
        "auto-update"
      ],
      "prConcurrentLimit": 5
    },
    {
      "matchPaths": ["viewer"],
      "extends": ["github>Turbo87/renovate-config//rust/updateToolchain"]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "stabilityDays": 4
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "stabilityDays": 10
    }
  ]
}

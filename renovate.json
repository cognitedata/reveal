{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": ["@cognite/sdk", "@cognite/reveal"],
      "enabled": false
    },
    {
      "matchLanguages": ["rust"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "stabilityDays": 4
    },
    {
      "matchUpdateTypes": ["major"],
      "stabilityDays": 10
    }
  ]
}

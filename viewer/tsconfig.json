{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist-ts",
    "rootDir": "src",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
        "node_modules/@types",
        "src/@types"
    ],
    "lib": [
        "dom",
        "esnext"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*", "src/@types/**/*"]
}
